{
  "manifest_version": 2,
  "name": "IPAfy",
  "version": "1.1",

  "description": "Transcribes English pages to IPA",
  "icons": {
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "tabs"
  ],

  "background": {
    "scripts": ["js-lib/jquery-3.2.1.js", "js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js-lib/jquery-3.2.1.js", "js/content.js"]
    }
  ],

  "browser_action": {
      "default_icon": "icons/icon-96.png",
      "default_title": "IPA this",
      "default_popup": "html/popup.html",
      "browser_style": true
  }
}
